<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_nav"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.dynatech2012.kamleonuserapp.fragments.LoginFragment"
        android:label="activity_login"
        tools:layout="@layout/activity_login" >
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_loginFragment_to_forgotPwdFragment"
            app:destination="@id/forgotPwdFragment" />
    </fragment>

    <fragment
        android:id="@+id/forgotPwdFragment"
        android:name="com.dynatech2012.kamleonuserapp.fragments.ForgotPwdFragment"
        android:label="activity_forgot_pwd"
        tools:layout="@layout/activity_forgot_pwd" >
        <action
            android:id="@+id/action_forgotPwdFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_forgotPwdFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>


    <fragment
        android:id="@+id/privacyFragment"
        android:name="com.dynatech2012.kamleonuserapp.fragments.PrivacyFragment"
        android:label="activity_privacy"
        tools:layout="@layout/activity_privacy" >
        <action
            android:id="@+id/action_privacyFragment_to_onboardingFragment"
            app:destination="@id/onboardingFragment" />
    </fragment>
    <fragment
        android:id="@+id/onboardingFragment"
        android:name="com.dynatech2012.kamleonuserapp.fragments.OnboardingFragment"
        android:label="activity_onboarding"
        tools:layout="@layout/activity_onboarding" />

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.dynatech2012.kamleonuserapp.fragments.RegisterFragment"
        android:label="activity_register"
        tools:layout="@layout/activity_register" >
        <action
            android:id="@+id/action_registerFragment_to_privacyFragment"
            app:destination="@id/privacyFragment" />
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>

    </navigation>