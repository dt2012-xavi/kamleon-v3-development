<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.DeleteFragment">

    <ImageButton
        android:layout_width="@dimen/nav_back_button_size"
        android:layout_height="@dimen/nav_back_button_size"
        android:src="@drawable/bg_nav_back_circle"
        android:id="@+id/btnNavClose"
        android:background="@color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/nav_back_button_left"
        android:layout_marginTop="@dimen/nav_back_button_top"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="32dp"
        app:layout_constraintTop_toBottomOf="@id/btnNavClose"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/CircularBoldFont"
            android:layout_marginTop="16dp"
            android:textColor="@color/text_color_category"
            android:text="@string/delete_title"
            android:textAllCaps="true"
            android:textSize="@dimen/ts_14"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="8dp"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="12dp"
                android:paddingVertical="2dp"
                android:background="@drawable/bg_setting_list_shadow">
                <com.dynatech2012.kamleonuserapp.views.SettingMenuItemView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/setting_menu_item_height"
                    android:id="@+id/prefMenuItemDesactive"
                    app:settingTypeLabel="@string/delete_deactivate"
                    app:settingTypeValue=""
                    app:settingRightArrow="true"
                    app:settingRightSwitch="false"/>
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/CircularRegularFont"
                android:layout_marginTop="16dp"
                android:paddingHorizontal="16dp"
                android:text="@string/delete_deactivate_desc"
                android:textColor="@color/kamleon_dark_grey_50"
                android:textSize="@dimen/ts_12"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:paddingHorizontal="12dp"
                android:paddingVertical="2dp"
                android:background="@drawable/bg_setting_list_shadow">
                <com.dynatech2012.kamleonuserapp.views.SettingMenuItemView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/setting_menu_item_height"
                    android:id="@+id/prefMenuItemDelete"
                    app:settingTypeLabel="@string/delete_delete"
                    app:settingTypeValue=""
                    app:settingRightArrow="true"
                    app:settingRightSwitch="false"/>
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/CircularRegularFont"
                android:layout_marginTop="16dp"
                android:paddingHorizontal="16dp"
                android:text="@string/delete_delete_desc"
                android:textColor="@color/kamleon_dark_grey_50"
                android:textSize="@dimen/ts_12"/>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>