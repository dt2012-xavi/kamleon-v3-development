<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/kmln_graph_view_padding_top"
        android:paddingBottom="@dimen/kmln_graph_view_padding_bottom"
        android:orientation="vertical">

        <com.dynatech2012.kamleonuserapp.views.chart.views.KmlnHeaderView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/graphViewHeader"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/contentContainer"
            android:layout_weight="1">
            <com.dynatech2012.kamleonuserapp.views.chart.views.KmlnGraphView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/graphViewContent"/>
        </FrameLayout>

        <com.dynatech2012.kamleonuserapp.views.chart.views.KmlnFooterView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/graphViewFooter"/>

    </LinearLayout>
    <com.dynatech2012.kamleonuserapp.views.chart.views.KmlnLabelView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/graphLabelView"/>
</FrameLayout>
