                    android:layout_height="wrap_content"
                    android:id="@+id/cv_analytic_volume"
                    app:analyticsType="volume"/>

                <com.dynatech2012.kamleonuserapp.views.cards.CardViewAnalyticsItemComposeView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cv_analytic_empty"
                    app:analyticsType="empty"/>
