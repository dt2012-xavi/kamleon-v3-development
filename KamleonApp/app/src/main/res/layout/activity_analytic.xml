                    android:paddingHorizontal="6dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:id="@+id/tv_analytic_last_sample"
                    android:textAllCaps="true"
                    android:text="@string/home_last_sample_message_default"
                    tools:text="last sample 2 november 2023"
                    android:textColor="@color/kamleon_secondary_grey_50"
                    android:textAppearance="@style/TextAppearance.Kamleon.Subtitle2" />

                <com.dynatech2012.kamleonuserapp.views.cards.CardViewAnalyticsItemComposeView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/cv_analytic_hydration"
                    app:analyticsType="hydration"/>
