<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingHorizontal="@dimen/setting_item_padding_h"
    android:layout_gravity="center"
    android:gravity="center">
    <!--    android:background="?attr/selectableItemBackground"-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingHorizontal="4dp"
        android:id="@+id/tvLabel"
        android:textSize="@dimen/ts_14"
        android:textAppearance="@style/TextAppearance.Kamleon.Bold"
        tools:text="NAME"
        android:textColor="@color/kamleon_secondary_grey_70"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAlignment="textEnd"
        android:paddingHorizontal="4dp"
        android:id="@+id/tvValue"
        android:textSize="@dimen/ts_14"
        android:textAppearance="@style/TextAppearance.Kamleon.Book"
        tools:text="value"
        android:textColor="@color/kamleon_secondary_grey_70"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
    <com.google.android.material.materialswitch.MaterialSwitch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="0.7"
        android:scaleY="0.7"
        android:layout_marginEnd="-8dp"
        android:id="@+id/settingItemSwitch"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:checked="true"
        android:thumb="@drawable/thumb_new"
        app:trackTint="@color/switch_track_ios_color"
        app:thumbTint="@color/switch_thumb_ios_color"
        app:trackDecorationTint="@color/transparent"
        android:textOn=""
        android:textOff=""
        />
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/settingItemRightArrow"
        android:paddingStart="16dp"
        android:visibility="gone"
        android:layout_gravity="center"
        android:src="@drawable/icn_setting_chevron"
        tools:ignore="UseAppTint" />

</LinearLayout>