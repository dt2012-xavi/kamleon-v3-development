<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color_activity"
    tools:context=".activities.PrivacyActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100dp"
        android:paddingHorizontal="36dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/CircularMediumFont"
            android:layout_marginTop="8dp"
            android:textColor="@color/kamleon_dark_grey"
            android:text="@string/privacy_title"
            android:textSize="@dimen/ts_32"/>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/privacyLayout1"
            android:layout_marginTop="24dp"
            android:orientation="horizontal">
            
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ivPrivacy1"
                android:src="@drawable/icn_circular_check"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvPrivacy1"
                android:text="test"
                android:textColor="@color/kamleon_secondary_grey_70"
                style="@style/CircularRegularFont"
                android:paddingTop="4dp"
                android:paddingStart="16dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/privacyLayout2"
            android:layout_marginTop="18dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ivPrivacy2"
                android:src="@drawable/icn_circular_check"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvPrivacy2"
                android:textColor="@color/kamleon_secondary_grey_70"
                android:text="@string/privacy_item1"
                style="@style/CircularRegularFont"
                android:paddingTop="4dp"
                android:paddingStart="16dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/privacyLayout3"
            android:layout_marginTop="18dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ivPrivacy3"
                android:src="@drawable/icn_circular_check"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvPrivacy3"
                android:textColor="@color/kamleon_secondary_grey_70"
                android:text="@string/privacy_item1"
                style="@style/CircularRegularFont"
                android:paddingTop="4dp"
                android:paddingStart="16dp"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/privacy_note"
            style="@style/CircularRegularFont"
            android:textColor="@color/kamleon_secondary_grey_50"
            android:layout_marginTop="24dp"
            android:paddingEnd="16dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="44dp"
        android:paddingBottom="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/round_blue_button_height"
        android:paddingVertical="0dp"
        android:id="@+id/btnNext"
        android:background="@drawable/bg_btn_round_blue"
        android:textAllCaps="false"
        android:text="@string/privacy_button_next"
        android:textAppearance="@style/RoundBlueButtonTextStyle"
        android:textColor="@drawable/color_text_button_blue_round"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>