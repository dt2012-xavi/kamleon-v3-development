<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/input_text_box_height"
    android:background="@drawable/bg_round_input_box"
    android:paddingHorizontal="@dimen/input_text_box_padding_h">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/inputBoxTextView"
        android:layout_centerVertical="true"
        android:text="@string/placeholder_email"
        android:layout_alignParentStart="true"
        android:textSize="@dimen/ts_14"
        style="@style/CircularBookFont"
        android:textColor="@color/kamleon_secondary_grey_60"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:gravity="center_vertical">
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/inputBoxEditText"
            android:layout_weight="1"
            android:textAlignment="textEnd"
            android:paddingStart="50dp"
            android:textSize="@dimen/ts_14"
            android:textColor="@color/kamleon_secondary_grey_70"
            android:background="@null"
            android:inputType="textEmailAddress"
            android:imeOptions="actionNext"
            android:text=""/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/input_text_box_height"
            android:clickable="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/eyeIconContainerLayout"
            android:paddingStart="8dp">
            <ImageView
                android:layout_width="@dimen/input_text_box_eye_width"
                android:layout_height="@dimen/input_text_box_eye_height"
                android:scaleType="fitCenter"
                android:src="@drawable/icn_secure_input_arrow"/>
            <ImageView
                android:layout_width="@dimen/input_text_box_eye_width"
                android:layout_height="@dimen/input_text_box_eye_height"
                android:id="@+id/imageViewEye"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_eye_crossed"/>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>