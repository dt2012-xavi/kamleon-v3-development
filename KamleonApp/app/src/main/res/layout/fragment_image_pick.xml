<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_bottom_sheet_fragment"
    tools:context=".fragments.ImagePickFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="48dp"
        android:paddingTop="12dp"
        android:gravity="center"
        android:paddingBottom="36dp"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_bottom_sheet_line"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:id="@+id/imageProfile"
            android:layout_margin="10dp"
            android:src="@drawable/image_profile"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="16dp"
            android:background="@color/color_fa"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layoutLibrary"
            android:paddingHorizontal="10dp"
            android:gravity="center"
            android:paddingVertical="8dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icn_pick_image_gallery"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/CircularRegularFont"
                android:textSize="@dimen/ts_16"
                android:layout_marginStart="8dp"
                android:text="@string/image_pick_gallery"
                android:textColor="@color/color_fa"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layoutCamera"
            android:paddingHorizontal="10dp"
            android:gravity="center"
            android:paddingVertical="8dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icn_pick_image_camera"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/CircularRegularFont"
                android:textSize="@dimen/ts_16"
                android:layout_marginStart="8dp"
                android:text="@string/image_pick_camera"
                android:textColor="@color/color_fa"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layoutRemove"
            android:paddingHorizontal="10dp"
            android:gravity="center"
            android:paddingVertical="8dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icn_pick_image_remove"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/CircularRegularFont"
                android:textSize="@dimen/ts_16"
                android:layout_marginStart="8dp"
                android:text="@string/image_pick_remove"
                android:textColor="@color/color_red"/>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>