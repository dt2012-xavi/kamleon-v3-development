<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color_activity"
    tools:context=".activities.EmailActivity">

    <ImageButton
        android:layout_width="@dimen/nav_back_button_size"
        android:layout_height="@dimen/nav_back_button_size"
        android:src="@drawable/bg_nav_back_circle"
        android:id="@+id/btnNavClose"
        android:background="@color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/nav_back_button_left"
        android:layout_marginTop="@dimen/nav_back_button_top"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="32dp"
        app:layout_constraintTop_toBottomOf="@id/btnNavClose"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/CircularBoldFont"
            android:layout_marginTop="16dp"
            android:textColor="@color/text_color_category"
            android:text="@string/email_email"
            android:textSize="@dimen/ts_14"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingHorizontal="16dp"
                android:background="@drawable/bg_setting_list_shadow">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingVertical="4dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/CircularBoldFont"
                        android:textColor="@color/kamleon_dark_grey"
                        android:text="@string/email_email"
                        android:textSize="@dimen/ts_14"/>
                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/etEmail"
                        android:layout_weight="1"
                        android:textAlignment="textEnd"
                        android:textSize="@dimen/ts_14"
                        android:textColor="@color/kamleon_secondary_grey_70"
                        android:background="@null"
                        android:inputType="textEmailAddress"
                        android:imeOptions="actionDone"
                        android:text="maria.garcia@gmail.com"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp"
                android:paddingHorizontal="16dp"
                android:background="@drawable/bg_setting_list_shadow"
                android:paddingVertical="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="4dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/CircularBoldFont"
                        android:textColor="@color/kamleon_dark_grey"
                        android:text="@string/email_new"
                        android:textSize="@dimen/ts_14"/>
                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/etEmailNew"
                        android:layout_weight="1"
                        android:textAlignment="textEnd"
                        android:textSize="@dimen/ts_14"
                        android:textColor="@color/kamleon_secondary_grey_70"
                        android:background="@null"
                        android:inputType="textEmailAddress"
                        android:imeOptions="actionDone"
                        android:text=""/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginHorizontal="@dimen/setting_item_padding_h"
                    android:layout_marginVertical="4dp"
                    android:background="@color/kamleon_secondary_grey_40" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="4dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/CircularBoldFont"
                        android:textColor="@color/kamleon_dark_grey"
                        android:text="@string/email_confirm"
                        android:textSize="@dimen/ts_14"/>
                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/etEmailConf"
                        android:layout_weight="1"
                        android:textAlignment="textEnd"
                        android:textSize="@dimen/ts_14"
                        android:textColor="@color/kamleon_secondary_grey_70"
                        android:background="@null"
                        android:inputType="textEmailAddress"
                        android:imeOptions="actionDone"
                        android:text=""/>
                </LinearLayout>

            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/round_blue_button_height"
                android:background="@drawable/bg_btn_round_blue"
                android:layout_marginTop="20dp"
                android:paddingVertical="0dp"
                android:textAllCaps="false"
                android:id="@+id/btnSave"
                android:text="@string/setting_button_save"
                android:textAppearance="@style/RoundBlueButtonTextStyle"
                android:textColor="@drawable/color_text_button_blue_round"
                android:enabled="false"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>