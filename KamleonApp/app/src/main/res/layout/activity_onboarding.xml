<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color_activity"
    tools:context=".activities.OnboardingActivity">

    <ImageButton
        android:layout_width="@dimen/nav_back_button_size"
        android:layout_height="@dimen/nav_back_button_size"
        android:src="@drawable/icn_nav_back"
        android:id="@+id/btnNavBack"
        android:background="@color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/nav_back_button_left"
        android:layout_marginTop="@dimen/nav_back_button_top"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/btnNavBack"
        app:layout_constraintBottom_toBottomOf="@+id/btnNavBack"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingHorizontal="86dp"
        app:layout_constraintEnd_toEndOf="parent">

        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/progressStep"
            android:progress="30"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_centerInParent="true"/>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/onboardBottomLayout"
        android:paddingHorizontal="44dp"
        android:paddingBottom="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:layout_width="match_parent"
            android:layout_height="@dimen/round_blue_button_height"
            android:id="@+id/btnNext"
            android:paddingVertical="0dp"
            android:background="@drawable/bg_btn_round_blue"
            android:textAppearance="@style/RoundBlueButtonTextStyle"
            android:textAllCaps="false"
            android:text="@string/onboard_button_next"
            android:textColor="@drawable/color_text_button_blue_round"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_gravity="center"
            android:id="@+id/tvBottomDesc"
            android:textSize="@dimen/ts_14"
            style="@style/CircularBookFont"
            android:textColor="@color/kamleon_secondary_grey_60"
            android:text="@string/onboard_bottom_text"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/btnNavBack"
        app:layout_constraintBottom_toTopOf="@id/onboardBottomLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingHorizontal="36dp"
        android:paddingVertical="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/layoutNotification"
            android:paddingHorizontal="18dp"
            android:visibility="gone"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                style="@style/CircularBookFont"
                android:textSize="@dimen/ts_30"
                android:textColor="@color/kamleon_dark_grey"
                android:text="@string/onboard_noti_title"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                style="@style/CircularBoldFont"
                android:textSize="@dimen/ts_20"
                android:textColor="@color/kamleon_dark_grey"
                android:text="@string/onboard_noti_sub1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                style="@style/CircularRegularFont"
                android:textSize="@dimen/ts_20"
                android:textColor="@color/kamleon_dark_grey"
                android:text="@string/onboard_noti_sub2"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:paddingHorizontal="18dp"
            android:id="@+id/layoutLocation"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                style="@style/CircularBookFont"
                android:textSize="@dimen/ts_30"
                android:textColor="@color/kamleon_dark_grey"
                android:text="@string/onboard_location_title"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                style="@style/CircularBoldFont"
                android:textSize="@dimen/ts_20"
                android:textColor="@color/kamleon_dark_grey"
                android:text="@string/onboard_location_sub1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                style="@style/CircularRegularFont"
                android:textSize="@dimen/ts_20"
                android:textColor="@color/kamleon_dark_grey"
                android:text="@string/onboard_location_sub2"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:paddingHorizontal="18dp"
            android:id="@+id/layoutBirthday"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_gravity="center"
                style="@style/CircularBookFont"
                android:textSize="@dimen/ts_30"
                android:textColor="@color/kamleon_dark_grey"
                android:text="@string/onboard_birthday_title"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <DatePicker
                    android:id="@+id/datePicker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:datePickerMode="calendar"/>
            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:paddingHorizontal="18dp"
            android:id="@+id/layoutHeight"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_gravity="center"
                style="@style/CircularBookFont"
                android:textSize="@dimen/ts_30"
                android:textColor="@color/kamleon_dark_grey"
                android:text="@string/onboard_height_title"/>

            <androidx.appcompat.widget.AppCompatSpinner
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                style="@style/onboardSpinnerItemStyle"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:textAlignment="center"
                android:id="@+id/spinnerHeight"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:paddingHorizontal="18dp"
            android:id="@+id/layoutWeight"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_gravity="center"
                style="@style/CircularBookFont"
                android:textSize="@dimen/ts_30"
                android:textColor="@color/kamleon_dark_grey"
                android:text="@string/onboard_weight_title"/>
            <androidx.appcompat.widget.AppCompatSpinner
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                style="@style/onboardSpinnerItemStyle"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:layout_marginTop="40dp"
                android:id="@+id/spinnerWeight"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:paddingHorizontal="18dp"
            android:id="@+id/layoutGender"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_gravity="center"
                style="@style/CircularBookFont"
                android:textSize="@dimen/ts_30"
                android:textColor="@color/kamleon_dark_grey"
                android:text="@string/onboard_gender_title"/>

            <androidx.appcompat.widget.AppCompatSpinner
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                style="@style/onboardSpinnerItemStyle"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:layout_marginTop="40dp"
                android:id="@+id/spinnerGender"/>
        </LinearLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>