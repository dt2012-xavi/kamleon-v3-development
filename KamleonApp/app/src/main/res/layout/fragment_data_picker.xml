    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="48dp"
        android:paddingTop="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        android:paddingBottom="22dp"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bottomsheetDragLine"
            android:src="@drawable/img_bottom_sheet_line"/>

        <com.ozcanalasalvar.datepicker.view.datapicker.DataPicker
            android:id="@+id/dataPicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@color/kamleon_dark_grey"
            app:darkModeEnabled="true"
            app:textSize="20"
            app:textBold="true"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/round_blue_button_height"
            android:background="@drawable/bg_btn_round_blue"
            android:paddingVertical="0dp"
            android:layout_marginTop="28dp"
            android:gravity="center"
            android:clickable="true"
            android:id="@+id/tvSave"
            android:text="@string/setting_button_save"
            android:textAppearance="@style/RoundBlueButtonTextStyle"
            android:textColor="@drawable/color_text_button_blue_round"
            android:enabled="true"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
