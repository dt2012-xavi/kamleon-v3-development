<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/layoutTop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:id="@+id/idLayoutGraphType1"
                android:clickable="true"
                android:paddingHorizontal="@dimen/kmln_graph_header_item_padding_h"
                android:layout_marginHorizontal="@dimen/kmln_graph_header_item_margin_h"
                android:elevation="5dp"
                android:background="@drawable/kmln_bg_graph_header_item">

                <TextView
                    android:id="@+id/idGraphTypeText1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="HYDRATION"
                    android:textColor="@color/kmln_graph_header_item_text_active"
                    android:textSize="@dimen/kmln_graph_header_item_text_size" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:id="@+id/idLayoutGraphType2"
                android:clickable="true"
                android:paddingHorizontal="@dimen/kmln_graph_header_item_padding_h"
                android:layout_marginHorizontal="@dimen/kmln_graph_header_item_margin_h"
                android:elevation="5dp"
                android:background="@drawable/kmln_bg_graph_header_item">

                <TextView
                    android:id="@+id/idGraphTypeText2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="ELECTROLYTES"
                    android:textColor="@color/kmln_graph_header_item_text_active"
                    android:textSize="@dimen/kmln_graph_header_item_text_size" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:id="@+id/idLayoutGraphType3"
                android:clickable="true"
                android:paddingHorizontal="@dimen/kmln_graph_header_item_padding_h"
                android:layout_marginHorizontal="@dimen/kmln_graph_header_item_margin_h"
                android:elevation="5dp"
                android:background="@drawable/kmln_bg_graph_header_item">

                <TextView
                    android:id="@+id/idGraphTypeText3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="VOLUME"
                    android:textColor="@color/kmln_graph_header_item_text_active"
                    android:textSize="@dimen/kmln_graph_header_item_text_size" />

            </RelativeLayout>


        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:id="@+id/layoutBottom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#000FFF"/>

    <com.example.graphviewdemo.customview.KamleonGraphView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutTop"
        app:layout_constraintBottom_toTopOf="@+id/layoutBottom"
        android:id="@+id/graphView"/>

</androidx.constraintlayout.widget.ConstraintLayout>