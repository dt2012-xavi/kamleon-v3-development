<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- Drop Shadow Stack -->
    <item>
        <shape>
            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />

            <solid android:color="#000000" />

            <corners android:radius="@dimen/kmln_graph_footer_content_corner_radius" />
        </shape>
    </item>
    <item>
        <shape>
            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />

            <solid android:color="#FF0000" />

            <corners android:radius="@dimen/kmln_graph_footer_content_corner_radius" />
        </shape>
    </item>
    <item>
        <shape>
            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />

            <solid android:color="#FF0000" />

            <corners android:radius="@dimen/kmln_graph_footer_content_corner_radius" />
        </shape>
    </item>

    <item>
        <shape
            android:shape="rectangle">
            <solid android:color="#ffffff"/>
            <corners android:radius="@dimen/kmln_graph_footer_content_corner_radius"/>
            <stroke android:color="#00FF00" android:width="1dp"/>
        </shape>
    </item>

</layer-list>